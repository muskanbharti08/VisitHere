<button class="ml-4 bg-zinc-800 text-xl my-2 rounded-md border-2 px-2 py-1 text-white font-bold">Edit</button>
</form> -->
</div>

<% } %>

</div>


<%- include('header/footer.ejs'); -%>

</body>
<script>
    let bulb = document.querySelector('.bulb');
    let header = document.querySelector('.header');
    let bot = document.querySelector('.bot');
    let body = document.querySelector('body');
    let box = document.querySelectorAll('.box');
    let boxHeading = document.querySelectorAll('.boxHeading');
    let desHeading = document.querySelectorAll('.desHeading');
    bulb.addEventListener('click',()=>{
        console.log("clicked");
        body.classList.toggle("bg-zinc-300");
        header.classList.toggle("bg-zinc-300");
        bot.classList.toggle("bg-zinc-200");
        header.classList.toggle("bg-orange-400/90");
        bot.classList.toggle("bg-orange-400");
       for(el of box) el.classList.toggle("bg-orange-100");
       for(el of boxHeading) el.classList.toggle("text-blue-500 ");
       
       for(el of desHeading) el.classList.toggle("text-orange-900");
    
    
        console.log("clicked");
    })
    
    <%-  include('header/promise.ejs'); -%>
    </script>
</html>


   
    

